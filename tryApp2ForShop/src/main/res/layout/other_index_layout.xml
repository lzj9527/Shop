<?xml version="1.0" encoding="utf-8"?>
<android.extend.widget.ExtendLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现货总库存:"
                    android:textColor="@color/main_menubar_background"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:textSize="30dp"/>
                <TextView
                    android:id="@+id/product_all_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/main_menubar_background"
                    android:layout_gravity="center"

                    android:text="货数"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(预计3-5天到货)"
                        android:textColor="@color/main_menubar_background"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="25dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/nvjie"
                    android:layout_marginLeft="220dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/womenring"/>

                <ImageView
                    android:id="@+id/nanjie"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="420dp"
                    android:src="@drawable/menring" />

                <ImageView
                    android:id="@+id/diaozhui"
                    android:src="@drawable/diaozhui"
                    android:layout_marginLeft="620dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

                <ImageView
                    android:id="@+id/shoulian"
                    android:src="@drawable/shoulian"
                    android:layout_marginLeft="820dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

                <ImageView
                    android:id="@+id/kelajie"
                    android:src="@drawable/kelajie"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="250dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />


                <ImageView
                    android:id="@+id/duijie"
                    android:src="@drawable/duijie"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="450dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

                <ImageView
                    android:id="@+id/erding"
                    android:src="@drawable/erding"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="650dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

                <ImageView
                    android:id="@+id/taoxi"
                    android:src="@drawable/photo"
                    android:layout_marginLeft="850dp"
                    android:layout_gravity="bottom"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />



            </FrameLayout>
        </LinearLayout>
<!-- android:background="@android:colo/white"
    android:paddingBottom="40px"
    android:paddingLeft="140px"
    android:paddingRight="140px" -->
    <android.extend.widget.FragmentContainer
        android:id="@+id/search_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></android.extend.widget.FragmentContainer>
    <android.extend.widget.ExtendLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical">
       <android.extend.widget.ExtendLinearLayout
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="产品总库存:   "
               android:textColor="@color/main_menubar_background"
               android:textSize="25dp"/>
           <TextView
               android:id="@+id/product_all_number2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25dp"
               android:textColor="@color/main_menubar_background"
               android:text="货数"/>
       </android.extend.widget.ExtendLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="现货预计1-3天到货"
                android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#C98A76"
            >

            <EditText
                android:id="@+id/product_search_number"
                android:layout_width="249dp"
                android:layout_height="49dp"
                android:hint="            款号或名称"
                android:background="#fff"
                android:layout_marginLeft="0.5dp"
                android:layout_marginTop="0.25dp"
                />
                <Button
                    android:id="@+id/product_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="200dp"
                    android:gravity="center"
                    android:background="@drawable/search_all"
                    android:layout_marginTop="10dp"
                    />

        </FrameLayout>
        </LinearLayout>
    </android.extend.widget.ExtendLinearLayout>

    <android.extend.widget.adapter.ScrollGridView
        android:id="@+id/index_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:visibility="gone"
        android:scrollbars="none" >
    </android.extend.widget.adapter.ScrollGridView>

</android.extend.widget.ExtendLinearLayout>